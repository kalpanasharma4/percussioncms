            </fileset>
        </copy>

        <copy todir="${assembly-directory}/ObjectStore">
            <fileset dir="${rxapps-directory}/perc-rxapps-${project.version}/RxApp/ObjectStore">
            </fileset>
        </copy>

        <copy todir="${assembly-directory}">
