                <and>
                    <isset property="delivery.target" />
                    <equals arg1="${delivery.target}" arg2="qa" />
                </and>
                <then>
                    <PSCopy tofile="${install.config}/DeliveryServer/delivery-servers.xml" file="${configdir}/delivery-servers.xml.qa" replaceType="always" />
                </then>
            </elseif>
            <else>
